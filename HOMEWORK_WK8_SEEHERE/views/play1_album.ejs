<!DOCTYPE html>
<html>
<head>
  <title>Album DataBase Connected</title>
  <link rel="stylesheet" href="stylesheets/play1_album.css">
</head>
<body>
<div class="container">
  <header>
    <hgroup>
      <h4>Album Name<span class="album-title">&nbsp;&nbsp;&nbsp;&nbsp; <%=currentAlbum.name||"Albums"%></span></h4>
    </hgroup>
  </header>

  <div class="content">
    <div class="box left">
      <ul class="album-list">
        <!--<li class="album">-->
        <!--<a href="#" class="album-link">default</a>-->
        <!--<button class="btn-del-album">X</button>-->
        <!--</li>-->
        <% albumList.forEach(albn=>{ %>
        <li class="album">
          <a href="/album/albums/<%=albn.id%>/" class="album-link"><%=albn.name%></a>
          <button class="btn-del-album"><a href="/album/del/album-list/<%=albn.id%>">X</a></button>
        </li>
        <% }) %>


      </ul>
    </div>

    <div class="box display">
      <div class="button-grp">
        <form class="form-addname" action="/album/addNewAlbum" method="post">
          <input id="new-alb" type="text" placeholder="Album Name" name="new-album">
          <input type="submit" value="Go~">
        </form>
        <form class="form-addphoto" action="/album/uploadNewPh" method="post" enctype="multipart/form-data">
          <!--<label for="add-file">+ Add Photo</label>-->
          <input id='add-file' type="file" name="single_pic">
          <input type="submit" value="GoGo~">
        </form>
      </div>

      <div class="wrapper">
        <div class="photo-list show">
          <% for(let i = 0; i<pageContent.length; i++){ %>
          <div class="photo">

            <img src="/album/photoList/<%=pageContent[i]%>" alt="photos">
            <button><a href="/album/delphoto/<%=pageContent[i]%>">X</a></button>

          </div>
          <% }%>

        </div>
      </div>

      <nav>
        <ul>
          <li><a>First</a></li>
          <!--<li><a>1</a></li>-->
          <%for(let i = 0; i<(currentAlbum.photoList.length)/photoPerPage; i++) {%>

          <li>
            <a href="/album/albums/page/<%=i%>"> <%=(i+1)%>   </a>
          </li>

          <% } %>
          <li><a>Last</a></li>
        </ul>
      </nav>
    </div>
  </div>
  </div>
</body>
</html>